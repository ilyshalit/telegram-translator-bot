# Telegram Bot Configuration
BOT_TOKEN=

# Translation Provider Configuration
# Recommended free options (quality order):
# 1. ARGOS - Best free quality, open-source, no API key needed
# 2. DEEPL - Excellent quality, 500k chars/month free (requires API key)
# 3. LIBRE - Good quality, open-source, can use public server or self-host
# 4. GOOGLE - Good quality, requires Google Cloud setup
# 5. MYMEMORY - Basic quality, completely free, no setup needed
TRANSLATOR_PROVIDER=ARGOS   # ARGOS | DEEPL | GOOGLE | LIBRE | MYMEMORY

# DeepL Configuration
DEEPL_API_KEY=your_deepl_api_key_here

# Google Translate Configuration
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_CREDENTIALS_JSON_PATH=/path/to/credentials.json

# LibreTranslate Configuration
LIBRE_BASE_URL=https://libretranslate.com
LIBRE_API_KEY=your_libre_api_key

# Default Language Settings
DEFAULT_CHANNEL_LANGS=en
DEFAULT_USER_LANG=en

# Server Configuration
MODE=polling               # polling | webhook
WEBHOOK_URL=https://your-domain.com
PORT=8080
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO            # DEBUG | INFO | WARNING | ERROR | CRITICAL

# Sentry Configuration (Optional)
USE_SENTRY=false
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_REQUESTS=5     # Requests per window
RATE_LIMIT_WINDOW=15      # Window in seconds

# Database Configuration
DATABASE_URL=sqlite:///bot.db

# Text Processing Limits
MAX_TEXT_LENGTH=4096      # Maximum text length to process
MAX_COMMENT_LENGTH=3500   # Maximum comment length
