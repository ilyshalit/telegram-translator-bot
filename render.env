# Render Environment Variables Template
# Copy these to your Render service environment variables

# Required - Set in Render Dashboard
BOT_TOKEN=your_bot_token_here

# Database (Auto-generated by Render PostgreSQL service)
DATABASE_URL=postgresql://user:password@host:port/database

# Translation Provider
TRANSLATOR_PROVIDER=MYMEMORY

# Bot Configuration
MODE=polling
LOG_LEVEL=INFO
DEFAULT_CHANNEL_LANGS=en
DEFAULT_USER_LANG=en

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=15

# Text Processing
MAX_TEXT_LENGTH=4096
MAX_COMMENT_LENGTH=3500

# Monitoring
USE_SENTRY=false

# Python Runtime
PYTHON_VERSION=3.11.0

